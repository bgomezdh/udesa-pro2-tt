<header id="header">
    <div class="contenedora">


     <% if (locals.user != undefined) { %>
          <a href="/perfil" class="itemContenedora">
            <img src="/images/usuarios/<%= user.img %> " alt="Imagen de <%= user.name %>" id="logo" style="width: 50px;" />
          </a>
     <% }else { %>
          <a href="/movies/all" class="itemContenedora">
            <img src="/images/logo.png" alt="Soda Estereo" id="logo" />
          </a>
      <% } %> 
       
      

      <nav class="menuIndex itemContenedora">
        <ul>
          <li >
            <a href="/movies/all" class="itemLista">Todos
            </a>
          </li>
          <li>
            <a href="/movies/register" class="itemLista">Agregar</a>
          </li>
          <li>
            <a href="/users/register" class="itemLista">Registrarte</a>
          </li>
          <li>
            <a href="/users/login" class="itemLista">Login</a>
          </li>
        </ul>
      </nav>

      <form action="/movies/busqueda" class="itemContenedora" method="GET">
        <input type="text" name="pelicula" placeholder="buscar" value="" />
        <button type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
        <p class="alert"></p>
      </form>
    </div>

    <% if (locals.user != undefined) { %>
     <p>Bienvenido <%= user.email %> </p>
    <% } %>
  </header>